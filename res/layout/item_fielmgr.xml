<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_marginLeft="@dimen/main_10dp"
    android:layout_marginRight="@dimen/main_10dp"
    android:background="@drawable/bcg_selector"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/txt_fileitem_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:text="11"
        android:textColor="@color/black"
        android:textSize="@dimen/main_25sp" />

    <TextView
        android:id="@+id/txt_fileitem_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/txt_fileitem_type"
        android:layout_marginLeft="@dimen/main_100dp"
        android:text="11"
        android:textSize="@dimen/main_18sp"
        android:textColor="@color/black" />

    <ProgressBar
        android:id="@+id/pgb_file_item"
        style="?android:attr/progressBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/main_5dp" />

    <ImageView
        android:id="@+id/img_file_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/main_5dp"
        android:src="@drawable/ic_arrows_right" />

</RelativeLayout>