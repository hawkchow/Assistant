<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home_entry_item_normal"
    android:descendantFocusability="blocksDescendants" >

    <CheckBox
        android:id="@+id/chb_child_garbage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="false" />

    <ImageView
        android:id="@+id/img_child_garbage"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_toRightOf="@id/chb_child_garbage" />

    <TextView
        android:id="@+id/txt_name_child_garbage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/img_child_garbage"
        android:text="11"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/txt_size_child_garbage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:text="11" />

</RelativeLayout>